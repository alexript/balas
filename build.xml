<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project basedir="." default="build" name="balas">
	<property environment="env" />
	<property name="ECLIPSE_HOME" value="../../eclipse" />
	<property name="debuglevel" value="source,lines,vars" />
	<property name="target" value="1.6" />
	<property name="source" value="1.6" />
	<property name="gwt.args" value="" />
	<property name="gwt.sdk" location="${ECLIPSE_HOME}/plugins/com.google.gwt.eclipse.sdkbundle_2.3.0.r36v201104261928/gwt-2.3.0/" />


	<path id="GWT SDK.libraryclasspath">
		<pathelement location="${gwt.sdk}/gwt-user.jar" />
		<fileset dir="${gwt.sdk}" includes="gwt-dev*.jar" />
	</path>

	<path id="JUnit 3.libraryclasspath">
		<pathelement location="${ECLIPSE_HOME}/plugins/org.junit_3.8.2.v3_8_2_v20100427-1100/junit.jar" />
	</path>

	<path id="balas.classpath">
		<pathelement location="war/WEB-INF/classes" />
		<pathelement location="test-classes" />
		<path refid="GWT SDK.libraryclasspath" />
		<path refid="JUnit 3.libraryclasspath" />
		<fileset dir="war/WEB-INF/lib" includes="**/*.jar" />
	</path>

	<target name="clean">
		<delete dir="war/WEB-INF/classes" />
		<delete dir="test-classes" />
		<delete file="war/WEB-INF/lib/balas.jar" />
	</target>


	<target name="init">
		<mkdir dir="war/WEB-INF/classes" />
		<mkdir dir="test-classes" />
		<copy includeemptydirs="false" todir="war/WEB-INF/classes">
			<fileset dir="src">
				<exclude name="**/*.launch" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
		<copy includeemptydirs="false" todir="test-classes">
			<fileset dir="test">
				<exclude name="**/*.launch" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>


	<target name="build" depends="compile" />



	<target name="compile" depends="init">
		<echo message="${ant.project.name}: ${ant.file}" />
		<javac debug="true" debuglevel="${debuglevel}" destdir="war/WEB-INF/classes" source="${source}" target="${target}" includeantruntime="false" excludes="net/autosauler/ballance/client/**">
			<src path="src" />
			<classpath refid="balas.classpath" />
		</javac>
		<javac debug="true" debuglevel="${debuglevel}" destdir="test-classes" source="${source}" target="${target}" includeantruntime="false" excludes="net/autosauler/ballance/client/**">
			<src path="test" />
			<classpath refid="balas.classpath" />
		</javac>
	</target>

	<target name="libs" description="Copy libs to WEB-INF/lib">
		<mkdir dir="war/WEB-INF/lib" />
		<copy todir="war/WEB-INF/lib" file="${gwt.sdk}/gwt-servlet.jar" />
		<copy todir="war/WEB-INF/lib" file="${gwt.sdk}/gwt-servlet-deps.jar" />
	</target>

	<target name="gwtc" depends="compile" description="GWT compile to JavaScript (production mode)">
		<java failonerror="true" fork="true" classname="com.google.gwt.dev.Compiler">
			<classpath>
				<pathelement location="src" />
				<path refid="balas.classpath" />
			</classpath>
			<!-- add jvmarg -Xss16M or similar if you see a StackOverflowError -->
			<jvmarg value="-Xmx256M" />
			<arg line="-war" />
			<arg value="war" />
			<!-- Additional arguments like -style PRETTY or -logLevel DEBUG -->
			<arg line="${gwt.args}" />
			<arg value="net.autosauler.ballance.Ballance_autosauler_net" />
		</java>
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="war/WEB-INF/lib" />
		<jar destfile="war/WEB-INF/lib/balas.jar" basedir="war/WEB-INF/classes" />
	</target>

	<target name="changelog" depends="compile">
		<exec executable="bash" newenvironment="false" dir="./">
			<arg value="mkchangelog.sh" />
		</exec>
	</target>

	<target name="buildwar" depends="gwtc,jar,changelog">
		<war basedir="war" destfile="balas.war" webxml="war/WEB-INF/web.xml">
			<exclude name="WEB-INF/**" />
			<webinf dir="war/WEB-INF/">
				<include name="**/*.jar" />
			</webinf>
		</war>
	</target>

	<target name="deploy" depends="clean,buildwar">
		<copy file="balas.war" todir="." />
	</target>

	<target name="javadoc">
		<javadoc access="public" additionalparam=" -encoding &quot;UTF-8&quot; -charset &quot;UTF-8&quot; -docencoding &quot;UTF-8&quot;" author="true" classpath="war/WEB-INF/lib/gwt-log-3.1.0.jar:test-classes:/Users/alexript/eclipse/plugins/org.junit_3.8.2.v3_8_2_v20100427-1100/junit.jar:war/WEB-INF/lib/mongo-2.4.jar:war/WEB-INF/lib/sixx.jar:/Users/alexript/eclipse/plugins/com.google.gwt.eclipse.sdkbundle_2.3.0.r36v201104261928/gwt-2.3.0/gwt-user.jar:/Users/alexript/eclipse/plugins/com.google.gwt.eclipse.sdkbundle_2.3.0.r36v201104261928/gwt-2.3.0/gwt-dev.jar" destdir="doc" doctitle="BalAS API" nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" packagenames="net.autosauler.ballance.client,net.autosauler.ballance.server.util,net.autosauler.ballance.shared,net.autosauler.ballance.client.gui,net.autosauler.ballance.server,net.autosauler.ballance.server.model,net.autosauler.ballance.server.mongodb,net.autosauler.ballance.client.databases,net.autosauler.ballance.server.crypt,net.autosauler.ballance.client.utils" source="1.6" sourcepath="test:src" splitindex="true" use="true" version="true" />
	</target>

</project>
